---
layout: "layouts/layout.html"
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tag/{{ tag | tagUrlSlug }}/
eleventyComputed:
  title: Posts Tagged “{{ tag }}”
---

<h1>{{ tag }}</h1>

{% set taglist = collections[ tag ] %}

<section class="archives-list">
  <ul>
    {% for post in taglist | reverse %}
      {% if post.data.rss_only != true %}
        <li>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
          <span class="meta">{{ post.data.shortDateString }}</span>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</section>
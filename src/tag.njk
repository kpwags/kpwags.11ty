---
layout: "layouts/layout.html"
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tag/{{ tag | tagUrlSlug }}/
eleventyComputed:
  title: Posts Tagged “{{ tag }}”
---
<h1 class="tag-page-header"><span>Posts Tagged</span>{{ tag }}</h1>

{% set taglist = collections[ tag ] %}

{% for post in taglist | reverse %}
  {% if post.data.rss_only != true %}
    <article class="post">
      <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <div class="metadata">
        <div class="post-date">{{ post.data.date | readableDate }}</div>
        <div>&bull;</div>
        <div>{{ post | readingTime }}</div>
      </div>
      <div class="excerpt">{{ post.data.page.excerpt | toHTML | safe }}</div>
    </article>
  {% endif %}
{% endfor %}

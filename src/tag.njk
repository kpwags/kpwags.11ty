---
layout: "layouts/layout.html"
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tag/{{ tag | tagUrlSlug }}/
eleventyComputed:
  title: Posts Tagged “{{ tag }}”
---

<h1><span class="prefix"><span class="sr-only">Posts </span>Tagged</span>{{ tag }}</h1>

{% set taglist = collections[ tag ] %}

<section class="tags-list">
	<ul class="archives-list">
		{% for post in taglist | reverse %}
			{% if post.data.rss_only != true %}
				<li>
					<a href="{{ post.url }}">{{ post.data.title }}</a>
					<div class="post-metadata">
						<span class="tag {{ post.data.postType.css }}">{{ post.data.postType.name }}</span>
						<span class="date">{{ post.data.shortDateString }}</span>
					</div>
				</li>
			{% endif %}
		{% endfor %}
	</ul>
</section>
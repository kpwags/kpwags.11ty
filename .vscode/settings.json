{
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#b600a7",
        "titleBar.inactiveBackground": "#b600a7",
        "titleBar.activeForeground": "#ffffff",
        "activityBar.activeBackground": "#700067",
        "activityBarBadge.background": "#008ab0",
        "activityBar.inactiveForeground": "#ffffff",
        "activityBar.background": "#b600a7",
        "activityBar.foreground": "#ffffff",
        "statusBar.background": "#b600a7",
        "statusBar.border": "#b600a7",
        "statusBarItem.remoteBackground": "#b600a7",
        "statusBarItem.remoteForeground": "#ffffff",
        "statusBar.foreground": "#ffffff"
    },
    "workbench.colorTheme": "GitHub Dark Dimmed",
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.next": true
    },
    "[markdown]": {
        "editor.formatOnSave": false,
        "editor.wordWrap": "off"
    },
    "[mdx]": {
        "editor.formatOnSave": false,
        "editor.wordWrap": "off"
    }
}
